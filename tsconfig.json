{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "module": "esnext",
    "declaration": true,
  },
  "typeAcquisition": {
    "include": [
        "jest"
    ]
  },
  "include": ["src", "tests"]
}